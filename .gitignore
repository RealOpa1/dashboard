// Массив разрешенных доменов (12 платформ)
const allowedDomains = [
  'github.com',     
  'coursera.org',    
  'stackoverflow.com' 
  // ... остальные из списка
];

// Проверка URL через URLPattern API (Manifest V3)
const isEducationalSite = (url) => {
  return allowedDomains.some(domain => 
    new URLPattern({ hostname: domain }).test(url)
  );
};
